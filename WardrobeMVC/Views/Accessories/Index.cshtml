@model IEnumerable<WardrobeMVC.Models.Accessory>

@{
    ViewBag.Title = "My Accessories";
}

<h2>My Accessories</h2>

<p>
    @Html.ActionLink("Add a new accessory to your closet", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AccessoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccessoryPhoto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Occasion.Occasion1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Season.Season1)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AccessoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessoryPhoto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Occasion.Occasion1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Season.Season1)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AccessoryID }) |
            @Html.ActionLink("See Details", "Details", new { id=item.AccessoryID }) |
            @Html.ActionLink("Remove from closet", "Delete", new { id=item.AccessoryID })
        </td>
    </tr>
}

</table>

@model IEnumerable<WardrobeMVC.Models.Outfit>

@{
    ViewBag.Title = "Index";
}

<h2>My Outfits</h2>

<p>
    @Html.ActionLink("Create a new outfit", "Create")
</p>

<div class="container" id="outfitIndex">
    @foreach (var item in Model)
    {
        <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12" id="WardrobeIndex">
            <div class="container" id="outfitGrid">
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <img src="@Url.Content(item.Top.TopPhoto)" id="outfitIndexGrid"/>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <img src="@Url.Content(item.Accessory.AccessoryPhoto)" id="outfitIndexGrid" />
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <img src="@Url.Content(item.Bottom.BottomPhoto)" id="outfitIndexGrid" />
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                        <img src="@Url.Content(item.Footwear.FootwearPhoto)" id="outfitIndexGrid" />
                    </div>
                </div>
            </div>

            <h5>
                @Html.ActionLink("Edit", "Edit", new { id = item.TopID }) |
            @Html.ActionLink("See Details", "Details", new { id = item.TopID }) |
            @Html.ActionLink("Remove from closet", "Delete", new { id = item.TopID })
        </h5>
    </div>
    }
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Accessory.AccessoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bottom.BottomName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Footwear.FootwearName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Top.TopName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Accessory.AccessoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bottom.BottomName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Footwear.FootwearName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Top.TopName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OutfitID }) |
            @Html.ActionLink("See Details", "Details", new { id=item.OutfitID }) |
            @Html.ActionLink("Delete this outfit", "Delete", new { id=item.OutfitID })
        </td>
    </tr>
}

</table>

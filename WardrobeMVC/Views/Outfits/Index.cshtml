@model IEnumerable<WardrobeMVC.Models.Outfit>

@{
    ViewBag.Title = "Index";
}

<h2>My Outfits</h2>

<p>
    @Html.ActionLink("Create a new outfit", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Accessory.AccessoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bottom.BottomName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Footwear.FootwearName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Top.TopName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Accessory.AccessoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bottom.BottomName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Footwear.FootwearName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Top.TopName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.OutfitID }) |
            @Html.ActionLink("See Details", "Details", new { id=item.OutfitID }) |
            @Html.ActionLink("Delete this outfit", "Delete", new { id=item.OutfitID })
        </td>
    </tr>
}

</table>
